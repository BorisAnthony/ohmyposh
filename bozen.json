{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{if .Root}} :: root{{end}} {{.Shell}}  〉〉 {{.PWD}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#8800dd",
          "template": "󰄉 {{ .FormattedMs }}\n",
          "properties": {
            "threshold": 1000,
            "style": "round",
            "always_enabled": false
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "0",
          "template": "\n───────────────────────────────────────────────────────────────────────────────\n"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "lightBlue",
          "background": "transparent",
          "template": "{{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "15:04 "
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "0",
          "background": "transparent",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "full",
            "folder_separator_icon": "/"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "green",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}yellow{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}red{{ end }}",
            "{{ if gt .Ahead 0 }}cyan{{ end }}",
            "{{ if gt .Behind 0 }}magenta{{ end }}"
          ],
          "background": "transparent",
          "template": " {{ .HEAD }} {{if .BranchStatus }}{{ .BranchStatus }} {{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "branch_icon": " ",
            "branch_max_length": 25,
            "fetch_status": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "lightGreen",
          "background": "transparent",
          "template": "\n⭓"
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "0",
    "foreground_templates": [
      "{{ if gt .Code 0}}red{{else}}black{{end}}"
    ],
    "background": "transparent",
    "template": "<black>───────────────────────────────────────────────────────────────────────────────</>\n{{now | date \"15:04:05\"}} ❯ "
  },
  "secondary_prompt": {
    "foreground": "lightGreen",
    "background": "transparent",
    "template": "\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0\u00A0❯ "
  },
  "palette": {}
}